/*Desktop*/
@media (min-width: 1100px)	
	.RedesMenu
		&--footer		
			float right
@media (min-width: 1480px)
	/*Redes Index*/
	.Redes-index
		top 40%

@media (min-width: 1520px)
	.Redes
		display inline-block
		position fixed
		left 10px
		top 40%
		z-index 11
		width 46px
		height 250px
		
		&-desplegable
			width 50px
			display inline-block !important
		
		&-link
			display block
			margin .3em 0
			
		&-Button
			display none
	.RedesMenu
		&--footer		
			float right