
.cont_gen_pestanas_serv {
    width: 100%;
    float: left;
    margin: 10px 0;
    display: none;
}

.btn_pestana_serv {
  width: 32%;
  cursor: pointer;
  display: inline-block;
  font-size: 20px;
  color: #fff;
  padding: 10px 0;
  text-align: center;
  background: #494949;
  background: linear-gradient(top, #494949 0%, #000000 100%);
  background: linear-gradient(top, #494949 0%,#000000 100%);
  background: linear-gradient(to bottom, #494949 0%,#000000 100%);  
  transition: all .3s;
}
.btn_pestana_serv:after{

    background: url(../images/diseno/02-servicios/flecha_blanca.png) no-repeat center;
    display: inline-block;
    vertical-align: middle;
    width: 44px;
    height: 24px;
    margin: 0 0 0 10px;
    transform: rotate(-90deg);
    -webkit-transform: rotate(-90deg);
    -moz-transform: rotate(-90deg);
    transition: all .3s;
    -webkit-transition: all .3s;
    -moz-transition: all .3s;
}
.btn_pestana_serv.active{
    background: #f3a500;
}
.btn_pestana_serv:hover:after{
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
} 
.btn_pestana_serv.active:after{
    transition: all .3s;
    -webkit-transition: all .3s;
    -moz-transition: all .3s;
    background-color: #f3a500;
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
}

.cont_gen_servicios {
    width: 100%;
    float: left;
    margin: 20px 0 30px 0;
    display: none;
}
.cont_gen_servicios.selec{
    display: block;
}

.cont_gen_serv {
    width: 48%;
    height: 130px;
    max-height: 327px;
    display: inline-block;
    border: 1px solid #fff;
    box-sizing: border-box;
    overflow: hidden;
    position: relative;
}
.img_servicio{
    width: 100%;
    float: left;
    display: none;
}

/**/
.cont_nombre_serv {
    width: 100%;
    height: 100%;
    position: absolute;
    background: rgba(0,0,0,1);
    top: 0;
    left: 0;
}

.icon_serv {
    width: 100%;
    float: left;
    margin: 10px 0 ;
    text-align: center;
    height: 50%;
}
.icon_serv img{
    width: auto;
    height: 100%;
}

.nombre_serv {
    width: 95%;
    float: left;
    font-size: 18px;
    line-height: 18px;
    margin: 0 2.5% ;
    color: #fff;
    font-weight: 300;
}

.hover_serv {
    width: 100%;
    height: 100%;
    background: #000;
    position: absolute;
    top: 100%;
    left: 0;
    transition: all .2s;
    -webkit-transition: all .2s;
    -moz-transition: all .2s;
    box-sizing: border-box;
    border-bottom: 5px solid #f3a500;
}

.ver_serv {
    width: auto;
    display: inline-block;
    border: 1px solid #fff;
    margin: 25% 0 5% 0;
    font-size: 30px;
    color: #fff;
    padding: 10px 30px;
}
.ver_serv:after{
    content: "";
    background: url(../images/diseno/02-servicios/flecha_blanca.png) no-repeat center;
    display: inline-block;
    vertical-align: middle;
    width: 44px;
    height: 24px;
    margin:0 0 5px 10px;
    transform: rotate(-90deg);
    -webkit-transform: rotate(-90deg);
    -moz-transform: rotate(-90deg);
}

@media (min-width: 600px) {    

    .btn_pestana_serv {
        width: 30%;
        font-size: 32px;

    }
    .btn_pestana_serv:after{
        content: "";
    }
    .cont_gen_servicios {
        margin: 60px 0 30px 0;
    }
    .cont_gen_serv {
        width: 33.3%;
        height: 25vw;
        float: left;
    }
    .cont_gen_serv .img_servicio{
        display: none;
    }
    .cont_gen_serv:hover > .hover_serv{
        top:0;
    }

    .img_servicio {
        width: 100%;
        float: left;
        display: block;
    }
    .icon_serv {
        width: 100%;
        float: left;
        margin: 5% 0;
        text-align: center;
        height: 60%;
    }
    .icon_serv img{
        width: auto;
        height: 100%;
    }
    .nombre_serv{
        font-size: 22px;
        font-weight: 600;
        line-height: inherit;
    }
}   

@media (min-width: 960px) {
    
    .btn_pestana_serv{
        width: 20%;
    }
    .cont_gen_serv{
        height: 22vw;
    }
    .cont_gen_serv .img_servicio{
        display: block;
    }
    .cont_nombre_serv{
        background: rgba(0,0,0,.7);
    }
    .nombre_serv{
        font-size:30px ;
    }
    
}


@media (min-width: 1090px) {
    
    .nombre_serv {
        font-size: 42px;
    }
    
}