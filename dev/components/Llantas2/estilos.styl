/*LLANTAS2*/

.Llantas2	
	&-titleContainer
		display inline-block
		// margin-top 2.5em
		vertical-align top
		margin 80px 0 30px
	&-title
		font-weight 400
		font-size 1.8em
		color $full_black
		margin 0
	&-borde
		width 245px
		height 3px
		background-color $light_gray
		display inline-block
	&-itemContainer
		position relative
		display inline-block
		margin 1em 0
		vertical-align top
	&-list
		display none
		&._current
			display block
	&-item
		background-color $light_gray3
		max-width 313px
		min-height 574px
		position relative
		display inline-block
		box-shadow 5px 5px 10px rgba(0,0,0,0.1)
		margin 1em
	&-imageContainer
		width 276px
		height 276px
		margin .5em
		display inline-block
	&-itemTitle
		font-weight 400
		font-size 2em
		margin 0
	&-itemBorde
		width 100%
		max-width 357px
		height 3px
		background-color $light_gray
		display inline-block
	&-itemDescription
		font-weight 300
		font-size 1.43em
		text-align left
		color $dark_gray4
		margin .5em
	&-marca
		font-weight 400
		font-size 1.5em
		color $full_black
		text-align left
		margin .5em
	&-button
		color $white
		background-color $yellow
		font-weight 300
		font-size 1.5em
		position absolute
		bottom -10px
		// left 27%
		// padding .3em 1.2em
		left 0
		right 0
		width 90%
		max-width 135px
		margin 0 auto
		padding .1em .5em
	&-buttonIcon
		margin-left .5em
	&-shadow
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color transparent
		text-align center
		transition all 1s ease

		&:hover
			background-color $transparencia
			.Llantas2-shadowButton1			
				display inline-block
	&-shadowButton1
	&-shadowButton2
		display none
		padding .3em 1.2em
		font-weight 400
		font-size 1.69em
		color $white
		border 2px solid $yellow
		position absolute
		left 15%
		
	&-shadowButton1		
		top 40%
		
	&-shadowButton2		
		top 55%
		display none
	&-paginador
		margin-top 1.5em
		max-width 320px
	&-marcaContainer
		position absolute
		top 10px
		right 10px
		display inline-block
	&-itemMedidas	
		font-weight 400
		font-size 1.2em
		text-align left
		// color #3f3f3f
		margin .5em
		display inline-block
		text-transform capitalize
			
/*Desktop*/
@media (min-width: 1100px)
	.Llantas2
		margin-top 120px
		&-titleContainer		
			margin 40px 0 30px
		&-shadow
			&:hover
				.Llantas2-shadowButton2
					display inline-block

@media (min-width: 1280px)
	.Llantas2
		&-item
			max-width 352px
			height 574px
			margin 1em .4em
@media (min-width: 1480px)
	.Llantas2
		&-title
			font-size 2.56em