/*LLANTAS2*/

.Llantas2	
	&-titleContainer
		display inline-block
		margin-top 2.5em
		vertical-align top
	&-title
		font-weight 400
		font-size 2.56em
		color $full_black
		margin 0
	&-borde
		width 245px
		height 3px
		background-color $light_gray
		display inline-block
	&-itemContainer
		position relative
		display inline-block
		margin 1em 0
	&-item
		background-color $light_gray3
		max-width 352px
		height 574px
		position relative
		display inline-block
		box-shadow 5px 5px 10px rgba(0,0,0,0.1)
		margin 1em .4em
	&-imageContainer
		width 276px
		height 276px
		margin .5em
		display inline-block
	&-itemTitle
		font-weight 400
		font-size 2em
		margin 0
	&-itemBorde
		width 357px
		height 3px
		background-color $light_gray
		display inline-block
	&-itemDescription
		font-weight 300
		font-size 1.43em
		text-align left
		color $dark_gray4
		margin .5em
	&-marca
		font-weight 400
		font-size 1.5em
		color $full_black
		text-align left
		margin .5em
	&-button
		color $white
		background-color $yellow
		font-weight 300
		font-size 1.5em
		position absolute
		bottom -10px
		left 27%
		padding .3em 1.2em
	&-buttonIcon
		margin-left .5em
	&-shadow
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color transparent
		text-align center
		transition all 1s ease

		&:hover
			background-color $transparencia
			.Llantas2-shadowButton1
			.Llantas2-shadowButton2
				display inline-block
	&-shadowButton1
	&-shadowButton2
		display none
		padding .3em 1.2em
		font-weight 400
		font-size 1.69em
		color $white
		border 2px solid $yellow
		position absolute
		left 15%
		
	&-shadowButton1		
		top 40%
		
	&-shadowButton2		
		top 55%
/*Tablet*/
@media (min-width: 768px)	
	.Llantas2
		margin-top 120px