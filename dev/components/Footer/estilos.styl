/*FOOTER*/
.Footer
	&-title
		font-weight 300
		font-size 1.8em
		margin 0
		margin-top 1em
	&-regular
		font-weight 400
	&-border
		width 95%
		max-width 358px
		height 3px
		background-color $light_gray
		display inline-block
	&-marca
		margin 1em 0 2em
	&-marcaImageContainer
		display inline-block
		width 244px
		margin 1em 14px
	&-black
		float left
		width 100%
		background-color $dark_gray
	&-margin
		margin-top 1.5em
		
	&-central
		display none
		margin 1em
		text-align center

	&-tel
		font-weight 300
		font-size 1.8em
		color $yellow
		display inline-block
		margin 0
	&-telIcon
		margin 0 .6em
	
	&-contacto
		color $white
		font-weight 300
		font-size 1.56em
		border
		display inline-block
		margin 1em 0 .5em 
	&-contactoButton
		color $white
		border 1px solid $yellow
		font-weight 300
		font-size 1.75em
		padding .5em 1em
		display inline-block
		position relative
	&-cuadro
		background-color $yellow
		color $dark_gray
		position absolute
		right 0
		top 0
		width 69px
		height 69px
		line-height 69px
		font-size 1.6em
	&-copy
		clear both
		display inline-block
		width 100%
	&-copyText
		color $light_gray2
		font-weight 300
		font-size 1em
		
/*Tablet*/
@media (min-width: 768px)
	.Footer
		&-marcaImageContainer
			width 248px
			margin 1em 20px
		&-margin
			margin-top 3em
		&-central
			display inline-block
			width 420px
			vertical-align top
		&-contactoButton
			padding .5em 4.4em
/*Desktop*/
@media (min-width: 960px)
	.Footer		
		&-marcaImageContainer
			width 258px
			margin 1em 25px
/*Desktop*/
@media (min-width: 1200px)
	.Footer
		&-marcaImageContainer
			width 307px
			margin 1em 40px
@media (min-width: 1480px)
	.Footer
		&-title			
			font-size 2.56em