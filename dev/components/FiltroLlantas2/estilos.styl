/*FILTRO LLANTAS 2*/

.Filtro2
	margin 1.5em 0
	// background-color $transparent_black
	color $white
	position relative
	
	&-visible
		overflow auto
		cursor pointer
		padding 0
		background-color $transparent_black
	
	&-desplegable
		padding 1.5em 0
		background-color $transparent_black
		position absolute
		z-index 4
		display none
		width 100%
	&-title
	&-titleIcon
		font-size 1.43em
	&-title
		display inline-block
		font-weight 400		
		margin 0 0 0 1em
		float left
		vertical-align middle
		line-height 76px
		
	&-titleIcon
		float right
		font-weight 400		
		display none
		vertical-align middle
		line-height 76px
		margin 0 1em 0 0
		
	&-titleIcon--open
		display inline-block
	
	/*Miga de pan*/
	&-migaContainer
		display inline-block
		margin 0 1em
		font-weight 300
		
	&-migaElim
		color $white
		background-color $yellow
		width 20px
		height 20px
		display inline-block
		line-height 20px
		border-radius 50%
		margin .5em

	&-field
		padding 0
		border none
		margin 0
		display inline-block
		width 90%
		height 100%
		color $white
		font-weight 300
		font-size 1.31em
		margin 1em
	&-Caja	
		text-align left
		position relative
		display inline-block
		width 100%
		margin 1em 0
		// border 1px solid $white
		// vertical-align top
		// margin 1em
		
	&-fieldTitle		
		border 1px solid $white
		margin 0
		background-color $dark_gray
		width 100%
		padding .2em .5em
		box-sizing border-box
		background url("../images/down-arrow.png") no-repeat 95% center
		cursor pointer
		
	
	&-fieldList
		background-color $transparent_black
		// background-color $dark_gray
		width 100%
		position absolute
		top 42px		
		left 0
		z-index 3
		display none

	&-fieldLink
		display block
		color $white
		width 100%
		padding .2em .5em
		box-sizing border-box
		
	&-fieldTitle
	&-fieldLink
		text-transform uppercase
		
	&-select
		border none
		box-shadow none
		background-color transparent
		background-image none
		appearance none
		display block
		width 100%
		// width 115%
		color $white
		padding .2em .5em
		font-weight 300
		font-size 1.31em
		
	&-option
		background-color $dark_gray
		font-weight 300
		font-size 1.1rem
	&-button
		color $white
		background-color $yellow
		padding .3em
		margin .5em .1em
		display inline-block
		font-size 1.5em
		text-align center
		width 355px
	&-buttonText
	&-buttonIcon
		vertical-align middle
	&-buttonIcon
		font-size 1em
/*Tablet*/
@media (min-width: 500px)
	.Filtro2
		&-field
			width 60%
/*Dektop*/
@media (min-width: 940px)
	.Filtro2
		&-field
			// width 30%
			width 320px
			display inline-block
@media (min-width: 1480px)
	.Filtro2
		&-title
		&-titleIcon
			font-size 2.43em