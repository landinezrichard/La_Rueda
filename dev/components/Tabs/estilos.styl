		// 			display inline-block
		// 			position absolute
		// 			top 65px
		// 			left 80px
				
		&:focus
			outline 0
			
	&-contentPane
		display none
	&--is-active
		display block

	&--is-selected
		color $yellow
		border-bottom 3px solid $yellow
		
		&:after
			content ""
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid $yellow
			display inline-block
			position absolute
			top 65px
			left 45px
/*Tablet*/
@media (min-width: 768px)
	.Tabs
		&-itemLink			
			padding .5em 1.9em
			
			&:after				
				left 80px
		&--is-selected			
			&:after				
				left 80px