.Tabs
	// overflow hidden
	width 100%
	margin 0
	padding 0
	list-style none
	text-align center
	margin-bottom 1.5rem
	font-size 0
	position relative
	transition all .3s ease
	
	&-item
		display inline-block
		margin 0 0
		font-size 1.56rem
		
	
	&-itemLink
		cursor pointer
		position relative
		padding .5em
		float left
		text-decoration none
		color $white
		border-bottom 3px solid $white
		font-size 1.56rem
		
		&:after
			content ""
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid $white
			display inline-block
			position absolute
			top 65px
			left 45px

