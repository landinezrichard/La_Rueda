.Tabs
	// overflow hidden
	width 100%
	margin 0
	padding 0
	list-style none
	text-align center
	margin-bottom 1.5rem
	font-size 0
	position relative
	transition all .3s ease
	
	&-item
	&-itemLink
		font-size 1.3rem
	
	&-item
		display inline-block
		margin 0 0		
	
	&-itemLink
		cursor pointer
		position relative
		padding .5em
		float left
		text-decoration none
		color $white
		border-bottom 3px solid $white		
		
		&:after
			content ""
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid $white
			display inline-block
			position absolute
			top 52px
			left 40px
				
		&:focus
			outline 0
			
	&-contentPane
		display none
	&--is-active
		display block

	&--is-selected
		color $yellow
		border-bottom 3px solid $yellow
		
		&:after
			content ""
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid $yellow
			display inline-block
			position absolute
			top 52px
			left 40px
/*Tablet*/
@media (min-width: 768px)
	.Tabs
		&-itemLink
			padding .4em 1.9em .1em
			
			&:after
				top 44px
				left 65px
		&--is-selected
			&:after
				top 44px
				left 65px
				
@media (min-width: 840px)
	.Tabs
		&-item
		&-itemLink
			font-size 1.3rem			
			
/*Desktop*/
@media screen and (min-width: 1100px)
	.Tabs
		&-item
		&-itemLink
			font-size 1.56rem
			&:after
				left 80px
				top 52px
		&--is-selected
			&:after
				left 80px
				top 52px

@media screen and (min-width: 1140px)
	.Tabs
		&-item
		&-itemLink
			font-size 1.56rem