/*DESTACADOS*/

.Destacados
	&-fondo
		background-image url('../images/fondo.png')
	&-title
		font-weight 400
		font-size 2.56em
	&-borde
		width 357px
		height 3px
		background-color $light_gray
		display inline-block
	&-list
		max-width 1480px
	&-item
		background-color $white
		max-width 388px
		height 609px
		position relative
		display inline-block
	&-itemTitle
		font-weight 400
		font-size 2.56em
		margin 0
	&-itemBorde
		width 357px
		height 3px
		background-color $light_gray
		display inline-block
	&-itemDescription
		font-weight 300
		font-size 1.43em
		text-align left
		color $dark_gray4
		margin .5em
	&-imageContainer
		border 1px solid $light_gray
		width 364px
		height 370px
		margin .5em
	&-button
		color $white
		background-color $yellow
		font-weight 300
		font-size 1.5em
		position absolute
		bottom 0
		left 27%
		padding .3em 1.2em
	&-buttonIcon
		margin-left .5em
	&-shadow
		position absolute
		top 0
		left 0		
		width 100%
		height 97%
		background-color transparent
		text-align center
		transition all 1s ease
		
		&:hover
			background-color $transparencia			
			.Destacados-shadowButton
				display inline-block
			
	&-shadowButton
		display none
		padding .3em 1.2em
		font-weight 400
		font-size 1.69em
		color $white
		border 2px solid $yellow
		position absolute
		top 50%
		left 20%			