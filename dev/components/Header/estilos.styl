/*HEADER*/

.Header
	background-color $transparent_black
	color $white
	position fixed
	top 0
	left 0
	width 100%
	z-index 10
	height 4em
	line-height 3.5em
	display inline-block
	
	&-container
		display inline-block
		width 100%

	&-logo
		display inline-block
		float left
		margin-left 1em
		
		& .Logo-link
			font-size 4em
			
	&-right
		display inline-block
		float right

	&-subMenu--mobile
		display inline-block
		float right
		margin-right 1em
		margin-top 5px

	&-cotizadorButton
		text-decoration none
		text-transform uppercase
		color $yellow
		border 1px solid $yellow
		font-weight 700
		font-size 1em
		padding .3em 1em
	
	&-contactoButton
		margin 0 1em

	&-contactoButton
	&-menuButton
		border none
		background-color transparent
		padding 0 .5em

	&-subMenu--desktop
		display none
	&-about
	&-contacto
		display inline-block
	&-contactoText
	&--contactoIcon
	&-tel
		margin 0 .5em
		color $white
	&-contacto--mobile
		position absolute
		top 4em
		left 30%
		background-color $transparent_black
		display none

/*Tablet*/
@media (min-width: 1100px)
	.Header
		height 120px
		line-height 2.5em
		&-container
			// width 1480px
			max-width 1480px
			margin 0 auto
		&-logo
			float left
			width 175px
			height 120px

			& .Logo-link
				font-size 7.5em

		&-right			
			text-align center			
			display inline-block
			width 80%			
			// width 1288px
		&-subMenu--mobile
			display none
		&-subMenu--desktop
			display inline-block
			float right
			margin-top 15px

		&-about
			color $white
			text-transform uppercase
			margin 0 .5em
			font-weight 300
		&-cotizadorButton
			margin 0 .5em

		&-contacto
			border-bottom 1px solid $white
			padding 0 .5em
			margin 0 .5em
			text-transform uppercase
			font-weight 300
			font-size 1.16em
		&-contacto--mobile
			display none !important
		&-about
		&-cotizadorButton
		&-contacto
			margin-left 25px
			margin-right 25px
/*Desktop*/
@media (min-width: 1496px)
	.Header
		&-right
			float right
		&-subMenu--desktop
			float right		