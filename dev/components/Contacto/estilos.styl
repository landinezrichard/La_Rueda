
#cont_conoce_centros {
    width: 100%;
    float: left;
    margin: 20px 0;
}


#cont_cent_serv_contacto {
    width: 100%;
    height: auto;
    float: left;
    background: #efefef;
    box-sizing: border-box;
    padding: 10px 2.5%;
    // font-size: 30px;
    font-size: 1.7em;
    text-transform: uppercase;
    margin: 0;
}
#cont_cent_serv_contacto:before{
    width:100px;
    height: 100px;
    display: inline-block;
    background: url(../images/diseno/02-servicios/icon_centros.png) center no-repeat;
    margin: 0 5% 0 0;
    vertical-align: middle;
}
#cont_cent_serv_contacto:after{
    width:30px;
    height: 100px;
    display: inline-block;
    background: url(../images/diseno/02-servicios/flecha_negra.png) center no-repeat;
    margin: 0 0 0 2%;
    vertical-align: middle;
}
#cont_cent_serv_contacto span{
    font-weight: 300;
}


#cont_selec_cent_contacto {
    width: 100%;
    height: 74px;
    float: left;
    background: #efefef;
    box-sizing: border-box;
    background: #474747;
    padding: 15px 2.5%;
    margin: 0 0 20px 0;
}

@media (min-width: 960px){

    #cont_conoce_centros {
        margin: 30px 0;
    }
    #cont_cent_serv_contacto {
        width: 65%;
        height: 74px;
    }
    
    #cont_selec_cent_contacto {
        width: 35%;
    }
    
}

@media (min-width: 1100px){

    
    #cont_cent_serv_contacto:before{width:100px;
        content: "";
    }
    #cont_cent_serv_contacto:after{
        content: "";
    }
    #cont_cent_serv_contacto {
        height: 124px;
        // font-size: 30px;
        // text-align: left;
    }
    
    #cont_selec_cent_contacto {
        height: 124px;
        padding: 35px 2.5%;
        margin: 0 0 20px 0;
    }
}

@media (min-width: 1480px){

    #cont_conoce_centros {
        // margin: 80px 0;
         margin: 40px 0;
    }
    
    #cont_cent_serv_contacto {        
        font-size: 30px;
        text-align: left;
    }
}