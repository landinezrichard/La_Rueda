/*COTIZADOR*/

.Cotizador
	&-titleContainer
		display inline-block
		margin-top 2.5em
		vertical-align top
	&-title
		font-weight 400
		font-size 2.56em
		color $full_black
		margin 0
	&-borde
		width 245px
		height 3px
		background-color $light_gray
		display inline-block
	&-selectContainer
		background $white url("../images/diseno/02-servicios/flecha_negra.png") no-repeat 95% center
		float left
		width 100%
		margin 20px 0 0 0
	&-select
		border none
		box-shadow none
		background-color transparent
		background-image none
		appearance none
		width 100%		
		font-size 24px
		box-sizing border-box
		padding 8px 5%	
	&-checkContainer
		text-align left
		border none
		padding 0
		margin 20px 0 0 0
		float left
	&-check
		appearance none
		border 1px solid $gray
		width 25px
		height 25px
		vertical-align top
		&:checked
			background-color $yellow
	&-label		
		font-weight 400
		font-size 1.12em
		color $gray
		margin-left 0em
		display inline-block
		max-width 220px
		
	&-contacto
		float left
		margin 45px 0 0 0
		font-weight 400
		font-size 1.5em
		color $gray2
	&-contactoBold
		font-weight 700		
		color $gray2

@media (min-width: 768px)
	.Cotizador
		&-label
			max-width 260px

@media (min-width: 963px)
	.Cotizador
		&-label	
			max-width 300px
/*Desktop*/
@media (min-width: 1100px)
	.Cotizador
		margin-top 120px
		&-label
			margin-left 1em
			max-width 545px