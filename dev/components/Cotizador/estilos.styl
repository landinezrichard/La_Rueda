/*COTIZADOR*/

.Cotizador
	&-titleContainer
		display inline-block
		margin-top 2.5em
		vertical-align top
	&-title
		font-weight 400
		font-size 2.56em
		color $full_black
		margin 0
	&-borde
		width 245px
		height 3px
		background-color $light_gray
		display inline-block
	&-selectContainer
		background $white url("../images/diseno/02-servicios/flecha_negra.png") no-repeat 95% center
		float left
		width 100%
		margin 20px 0 0 0
	&-select
		border none
		box-shadow none
		background-color transparent
		background-image none
		appearance none
		width 100%		
		font-size 24px
		box-sizing border-box
		padding 8px 5%
/*Desktop*/
@media (min-width: 1100px)
	.Cotizador
		margin-top 120px