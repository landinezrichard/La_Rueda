/*CONSEJOS*/
.Consejos
	&-list
		margin-bottom 50px
	&-image
		border-bottom 4px solid $light_gray
	&-text
		margin-bottom 20px
	&-button
		color #fff
		background-color #f5a118
		font-weight 300
		font-size 1.5em
		position absolute
		bottom -25px
		left 0
		right 0
		width 140px
		padding 0.3em
		margin 0 auto
	&-buttonIcon
		margin-left 0.5em
/*Desktop*/
@media (min-width: 960px)
	.Consejos
		&-item
			width 24%
			margin 30px 0.5%