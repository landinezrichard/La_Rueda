/*LLANTAS*/
.Llantas
	&-imageContainer
		margin 0
		position relative
	&-sobreIm
		position absolute
		top 3em
		left 0
		right 0
		width 100%
		height 532px
		overflow visible
	&-title
		color $white
		font-weight 400
		font-size 2.56em
		margin 2em 0 .3em
		line-height 1rem
	&-borde
		width 245px
		height 3px
		background-color $light_gray
		display inline-block
	&-containerText
		display inline-block
		position absolute
		right 0
		bottom 0
		background-color $transparencia2
		color $white
		border 1px solid $dark_gray5
		max-width 693px
	&-containerLight
		font-weight 300
		font-size 2.56em
		margin 1em 0 0
	&-containerBold
		font-weight 700
		font-size 2.56em
		margin 0 1em .4em
	&-bordeFull
		display inline-block
		width 100%
		height 3px
		background-color $dark_gray5
		margin-bottom .5em

/*Desktop*/
@media (min-width: 1100px)
	.Llantas		
		&-sobreIm
			position absolute
			top 120px