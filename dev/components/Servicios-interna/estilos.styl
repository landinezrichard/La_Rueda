
#cont_gen_serv-interna {
    width: 95%;
    float: left;
    margin: 30px 2.5% 0 2.5%;
}

#cont_info_serv_interna {
    width: 100%;
    display: inline-block;
}

#cont_titulo_serv_interna {
    width: 100%;
    float: left;
}

#icon_tit_serv_interna {
    width: 15%;
    height: 74px;
    float: left;
    background: #282828;
    text-align: center;
    box-sizing: border-box;
    padding: 20px 0;
}
#icon_tit_serv_interna img{
    height: 100%;
    width: auto;
}

#tit_serv_interna {
    width: 85%;
    height: 74px;
    background: #efefef;
    font-size: 30px;
    box-sizing: border-box;
    padding: 10px 2.5%;
    text-align: left;
    float: left;
}

#txt_serv_interna {
    width: 100%;
    height: auto;
    box-sizing: border-box;
    padding: 10px 2.5%;
    font-size: 18px;
    color: #3f3f3f;
    text-align: left;
    float: left;
    font-weight: 300;
}

#cont_cent_serv_serv_int {
    width: 100%;
    float: left;
    background: #efefef;
    height: 74px;
    box-sizing: border-box;
    padding: 10px 2.5%;
    font-size: 30px;
}
#cont_cent_serv_serv_int:before{
    width:100px;
    height: 100px;
    display: inline-block;
    background: url(../images/diseno/02-servicios/icon_centros.png) center no-repeat;
    margin: 0 5% 0 0;
    vertical-align: middle;
}

#cont_selec_cent_serv_int {
    width: 100%;
    height: 74px;
    float: left;
    background: #efefef;
    box-sizing: border-box;
    background: #474747;
    padding: 15px 2.5%;
    margin: 0 0 20px 0;
}

#cont_gen_forms {
    width: 100%;
    float: left;
    margin: 40px 0;
    position: relative;
    background: #f2f2f2;
}

.con_forms {
    width: 100%;
    float: left;
    background: #f2f2f2;
    box-sizing: border-box;
    padding: 20px 5%;
}

.titulos_forms {
    width: 100%;
    float: left;
    font-size: 31px;
    color: #232323;
    border-bottom: 4px solid #d8d8d8;
    text-transform: uppercase;
}
.titulos_forms span{
    font-weight: 300;
}

.forms {
    width: 100%;
    float: left;
    margin: 15px 0 ;
}

.campo_forms {
    width: 100%;
    float: left;
    margin: 20px 0 0 0;
    border:none;
    background: #fff;
    font-size: 24px;
    box-sizing: border-box;
    padding: 8px 5%;
}
.campo_forms::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color: #232323;
}
.campo_forms::-moz-placeholder { /* Firefox 19+ */
  color: #232323;
}
.campo_forms:-ms-input-placeholder { /* IE 10+ */
  color: #232323;
}
.campo_forms:-moz-placeholder { /* Firefox 18- */
  color: #232323;
}

.area_forms {
    width: 100%;
    height: 210px;
    float: left;
    margin: 20px 0 0 0;
    border:none;
    background: #fff;
    font-size: 24px;
    box-sizing: border-box;
    padding: 8px 5%;
}
.area_forms::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color: #232323;
}
.area_forms::-moz-placeholder { /* Firefox 19+ */
  color: #232323;
}
.area_forms:-ms-input-placeholder { /* IE 10+ */
  color: #232323;
}
.area_forms:-moz-placeholder { /* Firefox 18- */
  color: #232323;
}

.cont_btn_enviar_forms {
    width: 254px;
    float: right;
    border: 1px solid #f5a118;
    position: relative;
    margin: 40px 0 0 0;
}
.cont_btn_enviar_forms:after{
    content: "";
    float: right;
    width: 69px;
    height: 60px;
    background: url(../images/diseno/02-servicios/flecha_negra.png) no-repeat center #f5a118;
}
.cont_btn_enviar_forms input{
    width: 100%;
    float: left;
    font-size: 28px;
    height: 60px;
    background: transparent;
    border: none;
    border-right: 69px solid transparent;
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
    transition: all .3s;
    -webkit-transition: all .3s;
    -moz-transition: all .3s;
    -o-transition: all .3s;
}
.cont_btn_enviar_forms input:hover{
    background: #f5a118;
}

#img_forms {
    width: 100%;
    float: left;
    overflow: hidden;
}
#img_forms img{
    width: auto;
}

.cont_gen_servicios.otros {
    display: inline-block;
}

.ServInterna-buttonContainer{
    display inline-block
    width 100%
}

.ServInterna-buttonGris {
    background-color $dark_gray5   
}   
.ServInterna-button {
    background-color $yellow
}  

.ServInterna-buttonGris, .ServInterna-button {
    font-weight 700
    font-size 1.3em
    color $white
    padding .2em 1em
    display inline-block
    margin .5em    
}

