/*LINEAS INTERNA*/

.Lineas-interna
	width 100% 
	margin 50px 0 0
	text-align center
	&Desc
		display inline-block
		margin 1.3em 2em
		text-align justify
	&DescText
		font-weight 300
		font-size 1.5em
		max-width 960px
	&-promoBanner
		display inline-block
		width 95%
		margin 20px 2.5%
	&-promoBannerContainer
		display inline-block
		max-width 923px
	
@media (min-width: 960px)
	.Lineas-interna
		margin 150px 0 0
		&Desc
			margin 2em
		