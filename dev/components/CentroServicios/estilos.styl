
.cont-gen-titulos-internas {
    width: 95%;
    float: left;
    margin: 10px 2.5%;
    text-align: center;
}

.titulos-internas {
    width: auto;
    display: inline-block;    
    font-size: 25px;    
    font-weight: 300;
    padding: 0 5%;
    border-bottom: 5px solid #ccc;
    margin: 0 2.5%;
    text-transform: uppercase;
}
.titulos-internas span{
        font-weight: 400;
}

.fila-centro_serv {
    width: 100%;
    max-width: 350px;
    display: inline-block;
    margin: 25px 0 0 0;
}

#cuerpo-internas {
    width: 100%;
    float: left;
    margin: 50px 0 0 0;
    text-align: center;
}

.carrusel-img-serv {
    max-width: 452px;
    width: 95%;
    display: inline-block !important;
    position: relative;
    margin: 0 2.5%;
}
.carrusel-img-serv .owl-controls{
    margin: 0;
}
.carrusel-img-serv .owl-controls .owl-buttons div{
    width: 35px;
    height: 35px;
    line-height: 35px;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    padding: 7px;
    background-color: rgba(255,255,255,0.2);
    border: 2px solid #fff;
    font-size: 2.5em;
    text-align: center;    
    position: absolute;
    top: 38%;
}
.carrusel-img-serv .owl-next{
    right: 10px;
}

.carrusel-img-serv .owl-prev{
    left: 10px;
}


.img-centro-serv {
    width: 100%;
    float: left;
}

.cont-txts-centro-serv {
    width: 95%;
    display: inline-block;
    margin: 10px 2.5%;
    max-width: 350px;
}

.direccion-centro {
    width: 100%;
    float: left;
    font-size: 18px;
    color: #3f3f3f;
    text-align: left;
    font-weight: 600;
    margin: 0;
}

.tels-centro {
    width: 100%;
    float: left;
    // font-size: 30px;
    font-size: 18px;
    color: #3f3f3f;
    text-align: left;
    font-weight: 600;
    margin .3em 0;
}
.tels-centro a{
    color: #3f3f3f;
}

.descrip-centro {
    width: 100%;
    float: left;
    text-align: left;
    font-weight: 300;
    font-size: 20px;
    color: #3f3f3f;
    line-height: 24px;
}

.cont-gender-centros {
    width: 95%;
    display: inline-block;
    max-width: 600px;
    margin: 0 2.5%;
}

.btn-ver-map {
    width: 100%;
    float: left;
    padding: 5px 0;
    background: #efefef;
    font-size: 30px;
    cursor: pointer;
}
.btn-ver-map:before{
    content: "";
    width: 25px;
    height: 37px;
    background: url(../images/diseno/01-centros/pin.gif) no-repeat center;
    background-size: 100% auto;
    display: inline-block;
    margin: 0 20px;
    vertical-align:top;
}
.cont-serv-centro{
    width: 100%;
    float:left;
    background: #474747;
    padding: 2.5vw 40px;
    box-sizing: border-box;
    
}

.cont-select-servicios {
    width: 100%;
    border: 1px solid #fff;
    background: #282828 url("../images/down-arrow.png") no-repeat 95% center;
    text-align: left;
    // font-size: 21px;
    font-size: 18px;
    font-weight: bold;
    color: #fff;
    position: relative;
    box-sizing: border-box;
    padding: 10px;
}

.despleg-selec-serv {
    width: 100%;
    position: absolute;
    top: 50px;
    left: 0;
    box-sizing: border-box;
    padding: 10px;
    background: rgba(71,71,71,.8);
    border: 1px solid #fff;
    display: none;
    z-index: 20;
}

.servicio-centro {
    width: 100%;
    border-bottom: 1px solid #fff;
    padding: 8px 0;
}
.servicio-centro:last-child{
    border:none;
}

@media (min-width: 480px) {
    
        
    
}

@media (min-width: 960px) {
    
    // #cuerpo-internas {
    //     margin: 100px 0 0 0;
    // }
    .fila-centro_serv{
        max-width: none;
        border-bottom: 1px solid #ccc;
        float: left;
    }
    .carrusel-img-serv{
        max-width: 452px;
        width: 30%;
        float: left;
        position: relative;
        margin: 0;
    }
    .cont-txts-centro-serv {
        width: 35%;
        display: inline-block;
        margin: 10px 2.5%;
        max-width: none;
    }
    .cont-gender-centros {
        width: 28%;
        float: right;
        margin: 0;
    }
    .direccion-centro{
        font-size: 22px;
    }
    .tels-centro{
        font-size: 18px;
    }
    .titulos-internas{
        font-size: 1.8em;
    }
    .cont-gen-titulos-internas{
        margin: 20px 2.5%;
    }
    .btn-ver-map {
        font-size: 1.8em;
    }
    .btn-ver-map:before{
        width: 35px;
        height: 47px;        
    }
    .cont-select-servicios {       
        font-size: 21px;
    }
}

@media (min-width: 1100px) {
    
    #cuerpo-internas {
        margin: 100px 0 0 0;
    }
}

@media (min-width: 1480px) {
    .titulos-internas{
        font-size: 40px;
    }
    .direccion-centro{
        font-size: 30px;
    }
    .btn-ver-map {
        font-size: 41px;
    }
}