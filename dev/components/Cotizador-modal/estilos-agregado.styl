
#cont_agregado {
    // width: 600px;
    // height: 400px;
    width: 100%;
    height: auto;
    display: inline-block;
    text-align: center;
}

.icon_agregado {
    width: 100%;
    text-align: center;
    margin: 40px 0 0 0;
}

#txt_agregado {
    width: 80%;
    display: inline-block;
    // font-size: 39px;
    font-size: 28px;
    color: #262626;
    font-weight: 300;
}

.Texto-agregado {
    width: 80%;
    display: inline-block;
    font-weight: 700;
    font-size: 28px;   
}

.Agegado-features{
    display inline-block
    width 100%
    margin 1em 0
}

.Agregado-volver {
    display inline-block
    font-weight 700
    font-size 2.01em
    color $white
    background-color black
    width 32%
    padding 7px 0
    margin .2em
    cursor pointer  
}

