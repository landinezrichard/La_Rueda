/*LINEAS PRODUCTO*/

.LineasProd
	display inline-block
	margin 50px 0
	width 100%
	&-title
		font-weight 400
		font-size 2.56em
		margin 0

	&-borde
		width 320px
		height 3px
		background-color $light_gray
		display inline-block
		margin-bottom 1em
	&-list
		display inline-block
		width 100%
	&-list a
		display inline-block
		// width 95%
		// margin 1em 2.5%
		width 352px
		margin 1em
		// height 248px
		
	&-link
		display inline-block
		cursor pointer

	&-imageContainer
		// margin 0 1em
		margin 0
		position relative
		// width 388px
		// height 248px		
		display inline-block
		width 100%
	&-image
		width 100%
	&-shadow
		position absolute
		top 0
		left 0
		width 100%
		height 98%
		background-color $transparencia
		text-align center
		transition all 1s ease

		&:hover
			background-color transparent
	&-shadowText
		position absolute
		bottom 10%
		right 0
		left 0
		width 90%
		margin 0 5%
		// margin 0 1em
	&-button
		font-weight 400
		font-size 1.69em
		color $white
		border-bottom 3px solid $yellow
		// padding 0 1em
		display inline-block
		width 100%
	&-buttonText
		display inline-block
		max-width 88%
		vertical-align middle
	&-buttonIcon
		display inline-block
		// width 10%
		vertical-align middle
@media (min-width: 480px)
	.LineasProd
		&-list a		
			width 400px
/*Tablet*/
@media (min-width: 840px)
	.LineasProd
		&-borde
			width 471px
		&-list a
			// width 27%
			// margin 0 1.5%
			width 31.5%
			margin 0 1.5%