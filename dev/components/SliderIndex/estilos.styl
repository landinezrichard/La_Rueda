/*SLIDERINDEX*/

.Sliderindex
	&--mobile
		display inline-block
	&--desktop
		display none
	&-imageContainer
		margin 0
		position relative
	&-containerText		
		background-color $transparencia2
		color $white
		text-align center		
	&-containerLight
		font-weight 300
		font-size 2.56em
		margin 0
	&-containerBold
		font-weight 700
		font-size 2.56em
		margin 0
	&-borde
		width 100%
		height 3px
		background-color $light_gray
		margin-top 2em
		margin-bottom .5em
		
/*Tablet*/
@media (min-width: 1200px)
	.Sliderindex
		&--mobile
			display none
		&--desktop
			display block
		&-imageContainer
			margin 0
			position relative
		&-containerText
			position absolute
			top 120px
			right 222px
			max-width 693px
			max-height 232px