/*SLIDERINDEX*/

.Sliderindex
	&--mobile
		display inline-block
	&--desktop
		display none
	&-imageContainer
		margin 0
		position relative
	&-containerText		
		background-color $transparencia2
		color $white
		text-align center		
	&-containerLight
		font-weight 300
		font-size 2.56em
		margin 0
	&-containerBold
		font-weight 700
		font-size 2.56em
		margin 0
	&-borde
		width 100%
		height 3px
		background-color $light_gray
		margin-top 2em
		margin-bottom .5em
		

	
/*Tablet*/
@media (min-width: 1200px)
	.Sliderindex
		&--mobile
			display none
		&--desktop
			display block
		&-imageContainer
			margin 0
			position relative
		&-containerText
			position absolute
			top 120px
			right 222px
			max-width 693px
			max-height 232px
			
/*estilos controles owl*/

.Sliderindex--desktop.owl-carousel.owl-theme .owl-controls.clickable
	position absolute
	bottom 15px
	left 0
	right 0
	margin 0 auto
	max-width 1480px
	
.Sliderindex--desktop.owl-carousel.owl-theme .owl-controls.clickable .owl-buttons div
	width 35px
	height 35px
	line-height 35px
	border-radius 50%
	// padding 10px
	padding 7px
	background-color $transparent_white
	border 2px solid $white
	font-size 2.5em
	text-align center
	
