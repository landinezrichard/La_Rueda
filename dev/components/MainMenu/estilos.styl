/*MAINMENU*/

.MainMenu
	line-height 1.2em
	display inline-block
	width 100%
	&-list
		background-color $transparent_black
		list-style none
		margin 0
		padding 0
		transition height .3s ease
		height 0
		overflow-x hidden
		overflow-y scroll
		position fixed
		top 3em
		left 0
		right 0
		
		&--show
			height 90%
	&-item
		box-sizing border-box
		transition all .3s ease
		border-bottom 0 solid $yellow
		&:hover
			border-bottom 2px solid $yellow
			
	&-link
		font-size 1.06em
		color $white
		padding 1.5em
		display block
		text-transform uppercase
		transition all .3s ease
		&:hover
			color $yellow
			// .MainMenu-item
			// 	border-bottom 2px solid $yellow
	&--footer
		display none

/*Tablet*/
@media (min-width: 1100px)
	.MainMenu
		line-height inherit
		float right
		margin-top 1.2em
		
		&-list
			background-color transparent
			position relative
			overflow hidden
			height auto
			float left
			top 0
			right 0
		&-item
			display inline-block
		&-link
			display inline-block
			padding .9em .9em 0
			
		&--footer
			display inline-block			
			width 200px
			margin 1em
			
		&-list--footer
			list-style none
			text-align left
			padding 0
		&-item--footer
			margin 0.75em 0
		&-link--footer
			color $white
			font-weight 300
			font-size 1.01em
/*Desktop*/
@media (min-width: 1496px)
	.MainMenu
		&-list
			float right
		&-link
			padding 1em 2.1em 0
		&--footer			
			float left