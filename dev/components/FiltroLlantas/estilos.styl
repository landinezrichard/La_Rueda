/*FILTROLLANTAS (Buscador)*/

.select
.select--linea
	overflow hidden
	border 1px solid $white
	background $dark_gray url("../images/down-arrow.png") no-repeat 95% center
	margin .3em .1em
.select--linea
	display inline-block
	width 28%
	min-width 100px
	color $white
	padding .2em
	box-sizing border-box

.FiltroLlantas
	text-align center
	margin 1.5em
	
	&-form
	&-formDimension
		text-align left
	
	&-label
		display block
		color $yellow
		font-weight 300
		font-size 1.37em
		margin 1em .1em .4em
	&-select
	&-selectDimension
		font-size 1.2em
		
	&-select
		border none
		box-shadow none
		background-color transparent
		background-image none
		appearance none
		display block
		width 100%
		// width 115%
		color $white
		padding .2em .5em
		font-weight 300
		
		& option
			font-weight 300
	&-option
		background-color $dark_gray
		font-weight 300
		font-size 1.1rem
	&-button
		color $white
		background-color $yellow
		padding .3em
		margin .5em .1em
		display block
		font-size 1.3em
		text-align center
		
	&-selectDimension
		border none
		box-shadow none
		background-color transparent
		background-image none
		appearance none
		display inline-block		
		width 100%
		font-weight 300
		
	&-buttonText
	&-buttonIcon
		vertical-align middle
	&-buttonIcon
		font-size 1em
		
@media (min-width: 600px)
	.select--linea
		display inline-block
		width 28%
		min-width 100px
		color $white
		&:nth-child(2n+1)
			margin .3em 1em
		
/*Tablet*/
// @media (min-width: 768px)
@media (min-width: 840px)
	.select
		width 100%
	.select--linea
		&:nth-child(2n+1)
			margin .3em .6em
	.FiltroLlantas
		&-button
			width 97%
			padding .3em
			margin 0
		&-buttonIcon
			margin-left .5em
			font-size 1.3em
		&-select
		&-selectDimension
			font-size 1.2em
/*Desktop*/
@media (min-width: 900px)
	.select
		width 360px
		display inline-block	
	.FiltroLlantas
		&-button
			width 350px		
		
@media (min-width: 1280px)
	.FiltroLlantas
		&-button
			font-size 1.5em
		&-select
		&-selectDimension
			font-size 1.31em

@media (min-width: 1495px)
	.select
		width 360px
	.FiltroLlantas
		&-form
		&-formDimension
			display block
			width 100%
		&-button
			width 350px