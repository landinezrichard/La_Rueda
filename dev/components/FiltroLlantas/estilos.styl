/*FILTROLLANTAS*/

.select
.select--linea
	overflow hidden
	border 1px solid $white
	background $dark_gray url("../images/down-arrow.png") no-repeat 95% center
	margin .3em .1em
.select--linea
	display inline-block
	width 28%
	min-width 100px
	color $white
	&:nth-child(2n+1)
		margin .3em 1em

.FiltroLlantas
	text-align left
	margin 1.5em
	
	&-label
		display block
		color $yellow
		font-weight 300
		font-size 1.37em
		margin 1em .1em .4em
		
	&-select
		border none
		box-shadow none
		background-color transparent
		background-image none
		appearance none
		display block
		width 100%
		// width 115%
		color $white
		padding .2em .5em
		font-weight 300
		font-size 1.31em
		& option
			font-weight 300
	&-option
		background-color $dark_gray
		font-weight 300
		font-size 1.1rem
	&-button
		color $white
		background-color $yellow
		padding .3em
		margin .5em .1em
		display block
		font-size 1.5em
		text-align center
		
	&-selectDimension
		border none
		box-shadow none
		background-color transparent
		background-image none
		appearance none
		display inline-block		
		width 100%
		font-weight 300
		font-size 1.31em
	&-buttonText
	&-buttonIcon
		vertical-align middle
	&-buttonIcon		
		font-size 1em
	
		
/*Tablet*/
@media (min-width: 768px)
	.select
		width 360px
		display inline-block
	.select--linea
		&:nth-child(2n+1)
			margin .3em .6em
	.FiltroLlantas
		&-button
			width 350px
			padding .3em
			margin 0
		&-buttonIcon
			margin-left .5em
			font-size 1.3em