@import "nib"
@import "normalize.styl"
@import url('https://fonts.googleapis.com/css?family=Oswald:400,300,700')

$white = #FFF
$full_black = #000
$transparent_black = rgba(0,0,0,.85)
$yellow = #F5A118
$dark_gray = #282828
$light_gray = #D8D8D8

html
	width 100%
	height 100%
	font-size 16px
	font-family 'Oswald', sans-serif /* Fuente de google fonts */

body
	background-color $white

ul
	margin 0

img
	max-width 100%

a
	text-decoration none

.MainContent
	margin-top 3em
	
.u-centrar
	text-align center
	overflow hidden
	
/*Tablet*/
@media (min-width: 768px)
	.MainContent
		margin-top 120px
		
	.u-centrar		
		margin 0 auto
		width 1480px
		max-width 1480px		

